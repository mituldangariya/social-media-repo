    <script>
        // jQuery ready function
        $(document).ready(function () {
            // Attach click event to follow/unfollow buttons
            $('.btn-follow').click(function () {
                var $btn = $(this);
                var following = $btn.data('following');

                // Simulate AJAX request (replace with actual AJAX call)
                setTimeout(function () {
                    following = !following;
                    $btn.text(following ? 'Unfollow' : 'Follow');
                    $btn.toggleClass('unfollow', !following);
                    $btn.data('following', following);
                }, 500); // Simulated delay of 500ms
            });
        });

    </script>

